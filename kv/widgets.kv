<MyLayout>
    GridLayout
        size: root.width, root.height
        #orientation: 'vertical'
        cols: 1
        rows: 5
        padding: 30
        spacing: 10
        Label:
            text: 'Audio/Video Source'
            size_hint: (None, None)
            height: 20
            width: 140
            padding_x: [5, 0]
            color: '#ffffff'
            background_color: 1, 1, 1, 1
            halign: 'right'
            bold: True
        TextInput
            id:url
            hint_text: 'Source URL or Name'
            hint_text_color: (255, 255, 255, 0.5)
            font_size: 14
            font_family: 'sans-serif'
            size_hint: (1, None)
            height: 45
            padding_x: [10, 0]
            padding_y: [14, 0]
            multiline: False
            background_normal: ''
            background_color: '#333333'
            border: 0, 3, 0, 3
            foreground_color: '#ffffff'
            cursor_color: [244/255, 244/255, 244/255, 0.7]
        Label:
            text: 'Type'
            size_hint: (None, None)
            height: 20
            width: 47
            padding_x: [5, 0]
            color: '#ffffff'
            background_color: 1, 1, 1, 1
            halign: 'left'
            bold: True
        TextInput
            id:type
            hint_text: 'Audio(A) or Video(V)'
            hint_text_color: (255, 255, 255, 0.5)
            size_hint: (1, None)
            height: 45
            padding_x: [10, 0]
            padding_y: [14, 0]
            multiline: False
            background_normal: ''
            background_color: '#333333'
            border: 0, 3, 0, 3
            foreground_color: '#ffffff'
            cursor_color: [244/255, 244/255, 244/255, 0.7]
            font_size: 14
        Button:
            id:btn
            text: 'Download'
            size_hint: (None, None)
            width: 200
            height: 50
            bold: True
            background_normal: ''
            background_color: '#333333'
            on_press: root.downloader()

